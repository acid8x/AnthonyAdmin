<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:text="Version 1"
            android:textColor="#000"
            android:textSize="18sp" />

        <me.grantland.widget.AutofitTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="100dp"
            android:textColor="#000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:text="Anthony Admin"
            android:singleLine="true"
            android:textSize="40sp"
            autofit:minTextSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <me.grantland.widget.AutofitLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            autofit:minTextSize="12sp">

            <Button
                android:id="@+id/bEmployes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="10dp"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textSize="56sp"
                android:singleLine="true"
                android:text="Modifier un employÃ©"/>

        </me.grantland.widget.AutofitLayout>

        <me.grantland.widget.AutofitLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            autofit:minTextSize="12sp">

            <Button
                android:id="@+id/bEmployePunchs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="10dp"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textSize="56sp"
                android:singleLine="true"
                android:text="Liste des punchs d'un employe"/>

        </me.grantland.widget.AutofitLayout>

        <me.grantland.widget.AutofitLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            autofit:minTextSize="12sp">

            <Button
                android:id="@+id/bDayPunchs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="10dp"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textSize="56sp"
                android:singleLine="true"
                android:text="Liste des punchs d'aujourd'hui"/>

        </me.grantland.widget.AutofitLayout>

        <me.grantland.widget.AutofitLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            autofit:minTextSize="12sp">

            <Button
                android:id="@+id/bDaysPunchs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="10dp"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textSize="56sp"
                android:singleLine="true"
                android:text="Punchs de journees specifique"/>

        </me.grantland.widget.AutofitLayout>

        <me.grantland.widget.AutofitLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            autofit:minTextSize="12sp">

            <Button
                android:id="@+id/bAllPunchs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:padding="10dp"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textSize="56sp"
                android:singleLine="true"
                android:text="Liste de tout les punchs"/>

        </me.grantland.widget.AutofitLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bQuitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="30dp"
        android:textColor="#000"
        android:padding="10dp"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Quitter l'applicaion"
        android:textSize="18sp"/>

</LinearLayout>